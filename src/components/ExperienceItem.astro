---
interface Props {
  logo: string;
  dates: string;
  role: string;
  company: string;
  description: string;
}

const { logo, dates, role, company, description } = Astro.props;
---

<div
  class="flex gap-x-4 ml-0 sm:ml-6 pb-8 border-0 sm:border-l border-gray-200 dark:border-neutral-700"
>
  <div
    class="hidden sm:flex items-center justify-center -translate-x-1/2 rounded-full w-14 h-14 aspect-square bg-white border dark:bg-neutral-950 border-neutral-300 dark:border-neutral-700"
  >
    <img src={logo} alt={company} class="w-8 h-8" />
  </div>
  <div class="flex flex-col">
    <p
      class="text-sm uppercase text-neutral-400 dark:text-neutral-500 trackign-widest"
    >
      {dates}
    </p>
    <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-100">
      {role}
    </h3>
    <p class="mt-4 text-lg font-medium dark:text-neutral-300">{company}</p>
    <p class="text-md font-light text-neutral-600 dark:text-neutral-400">
      {description}
    </p>
  </div>
</div>
