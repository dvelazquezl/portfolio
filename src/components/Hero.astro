---
import Linkedin from "./icons/Linkedin.astro";
import Email from "./icons/Email.astro";
---

<div class="flex flex-col space-y-6">
  <div class="flex items-center gap-4">
    <img
      class="aspect-square my-2 ring-4 ring-neutral-200 rounded-full"
      src="/images/profile.webp"
      width="100"
      height="100"
      alt="profile picture"
    />
    <h1
      class="text-4xl font-bold leading-tight md:text-4xl lg:text-6xl text-neutral-900 dark:text-white"
    >
      Hi, I'm Daniel.
    </h1>
  </div>
  <p class="mb-6 text-lg font-semibold text-neutral-600 dark:text-neutral-400">
    I'm a Software Engineer living in Obligado, Paraguay.
    <br class="hidden lg:block" /> I focus on Web and Mobile development.
  </p>
  <div class="flex space-x-4">
    <a
      href="mailto:danielvelazquez.dev@gmail.com"
      class="inline-flex items-center px-2 py-1 gap-2 font-semibold duration-300 ease-out border rounded-lg bg-neutral-900 dark:bg-white dark:text-neutral-900 text-neutral-100 hover:border-neutral-700 border-neutral-900 dark:hover:border-neutral-300 hover:bg-white dark:hover:bg-black dark:hover:text-white hover:text-neutral-900"
    >
      <span class="text-sm">Let's talk</span>
      <Email />
    </a>
    <a
      href="https://www.linkedin.com/in/danielvelazquezl/"
      target="_blank"
      class="inline-flex items-center px-2 py-1 gap-2 font-semibold duration-300 ease-out border rounded-lg bg-neutral-900 dark:bg-white dark:text-neutral-900 text-neutral-100 hover:border-neutral-700 border-neutral-900 dark:hover:border-neutral-300 hover:bg-white dark:hover:bg-black dark:hover:text-white hover:text-neutral-900"
    >
      <span class="text-sm">LinkedIn</span>
      <Linkedin />
    </a>
  </div>
</div>
