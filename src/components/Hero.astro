---
import Linkedin from "./icons/Linkedin.astro";
import Email from "./icons/Email.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import Image from "astro/components/Image.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="flex flex-col space-y-6">
  <div class="flex flex-col sm:flex-row items-center gap-4">
    <Image
      loading="eager"
      src="/images/profile.webp"
      alt="profile"
      width="100"
      height="100"
      class="aspect-square ring-4 ring-neutral-200 rounded-full"
    />
    <h1
      class="text-4xl font-bold leading-tight md:text-4xl lg:text-6xl text-neutral-900 dark:text-white"
    >
      {t("hero.title")}
    </h1>
  </div>
  <p
    class="mb-6 text-center sm:text-left text-lg font-semibold text-neutral-600 dark:text-neutral-400"
  >
    {t("hero.subtitle1")}
    <br class="hidden lg:block" />
    {t("hero.subtitle2")}
  </p>
  <div class="flex justify-center sm:justify-start space-x-4">
    <a
      href="mailto:danielvelazquez.dev@gmail.com"
      class="inline-flex items-center px-2 py-1 gap-2 font-semibold duration-300 ease-out border rounded-lg bg-neutral-900 dark:bg-white dark:text-neutral-900 text-neutral-100 hover:border-neutral-700 border-neutral-900 dark:hover:border-neutral-300 hover:bg-white dark:hover:bg-black dark:hover:text-white hover:text-neutral-900"
    >
      <span class="text-sm">{t("hero.cta")}</span>
      <Email class="size-6" />
    </a>
    <a
      href="https://www.linkedin.com/in/danielvelazquezl/"
      target="_blank"
      class="inline-flex items-center px-2 py-1 gap-2 font-semibold duration-300 ease-out border rounded-lg bg-neutral-900 dark:bg-white dark:text-neutral-900 text-neutral-100 hover:border-neutral-700 border-neutral-900 dark:hover:border-neutral-300 hover:bg-white dark:hover:bg-black dark:hover:text-white hover:text-neutral-900"
    >
      <span class="text-sm">LinkedIn</span>
      <Linkedin class="size-6" />
    </a>
  </div>
</div>
